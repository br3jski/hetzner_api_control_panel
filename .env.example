FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# Optional: Storage Boxes API Token (api.hetzner.com)
# Note: Storage Boxes uses a different API from Cloud API
# Get your token from https://console.hetzner.cloud/
# HETZNER_STORAGE_TOKEN=your_storage_boxes_token_here

# Optional: Robot API Credentials (robot-ws.your-server.de)
# Note: Robot API manages dedicated (bare metal) servers, not cloud servers
# Create webservice user in Robot console: Settings -> Web service and app settings
# HETZNER_ROBOT_USER=your_robot_username
# HETZNER_ROBOT_PASS=your_robot_password
